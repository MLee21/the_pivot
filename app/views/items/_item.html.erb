<div class="col-lg-3 col-md-4 col-sm-6">
  <div class="item_box">
    <%= image_tag(item.image, class: 'default_image') %><br>
    <ul>
      <li><%= link_to(item.title, item) %></li>
      <li><%= item.description %></li>
      <% if current_user.admin? %>
        <li><%= link_to 'Edit', edit_admin_item_path(item) %></li>
      <% end %>
      <li><%= item.price %></li>
    </ul>
  </div>
</div>

