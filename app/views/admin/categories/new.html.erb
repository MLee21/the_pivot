<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <div class="g_box">
      <div class="row">
        <div class="category-form col-xs-3">
          <%= form_for([:admin, @category]) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, placeholder: 'name' %>
            <%= f.submit 'Create category', class: 'btn btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>