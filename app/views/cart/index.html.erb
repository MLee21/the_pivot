<div class="row">
  <div class="col-md-3">Title</div>
  <div class="col-md-2">Price</div>
  <div class="col-md-1">Quantity</div>
</div>
<hr>
<% @contents.each_pair do |item, data| %>
<div class="row">
  <div class="col-md-3"><%= item.title %></div>
  <div class="col-md-2"><%= item.price_formatted %></div>
  <div class="col-md-1"><%= data[:quantity] %> </div>
  <div class="col-md-1"><%= button_to "+", cart_path(id: item.id, adjust: "increase"), method: :patch %></div>
  <div class="col-md-1"><%= button_to "-", cart_path(id: item.id, adjust: "decrease"), method: :patch %></div>
  <div class="col-md-1"><%= button_to "Remove", cart_path(id: item.id), class: "bt btn-danger", method: :delete %></div>
  <div class="col-md-1"><%= data[:subtotal] %></div>
</div>
<% end %>

<h3>Total: <%= @total %></h3>

<% if logged_in? %>
  <br><%= button_to "Buy them dogs!", orders_path, class: "btn btn-success" %>
<% else %>
  <br><%= button_to "Login to buy dogs!", login_path, class: "btn btn-success", method: :get %>
<% end %>
