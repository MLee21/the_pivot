<div class="user-form col-xs-3">
  <%= form_for(@user) do |f| %>
    <%= f.text_field :full_name, placeholder: "full name" %><br><br>
    <%= f.text_field :display_name, placeholder: "display name" %><em> optional</em><br><br>
    <%= f.text_field :email, placeholder: "email" %><br><br>
    <%= f.password_field :password, placeholder: "password" %><br><br>
    <%= f.password_field :password_confirmation, placeholder: "confirm password" %><br>
    <%= f.submit "Create Account", class: "btn btn-success" %>
  <% end %>
</div>