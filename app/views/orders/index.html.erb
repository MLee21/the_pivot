<div class="user-orders">
  

  <strong><h4>Orders by Status</h4></strong>
  <div class="row">
    <strong><em>
    <div class="col-xs-1"> 
      <p>Ordered: </p>
      <p>Paid: </p>
      <p>Cancelled: </p>
      <p>Complete: </p>
    </div>
    </em></strong>
    <div class="col-xs-1">
      <p><%= @order_counts["ordered"] %></p>
      <p><%= @order_counts["paid"] %></p>
      <p><%= @order_counts["cancelled"] %></p>
      <p><%= @order_counts["complete"] %></p>
    </div>
  </div><br>
  
  <strong><h4>Orders Details (<%= @list %>)</h4>
  <div class="row right">
    <div class="col-xs-1">
      <em>filter: </em>
    </div>
    <div class="col-xs-1">
      <%= form_for(:status, url: :orders, method: :get) do |f| %>
        <%= f.collection_select(:status_id, Status.all, :id, :name, {:prompt => "Select"}, onchange: "submit()") %>
      <% end %>
    </div>
  </div>
 
  <em>
  <div class="row">
    <div class="col-xs-1">
      <p>Order ID</p>
    </div>
    <div class="col-xs-2">
      <p>Date</p>
    </div>
    <div class="col-xs-1">
      <p># of Items</p>
    </div>
    <div class="col-xs-1">
      <p>Status</p>
    </div>
  </div>
  </em></strong>
  
  <% @orders.each do |order| %>
    <div class="row">
      <div class="col-xs-1">
        <%= link_to "order-id #{order.id}", order_path(order) %>
      </div>
      <div class="col-xs-2">
        <%= order.order_date %>
      </div>
      <div class="col-xs-1">
        <%= order.items.count %>
      </div>
      <div class="col-xs-1">
        <%= order.status %>
      </div>
    </div>
  <% end %>

  <div class="container-fluid row">
    <% if current_user.any_orders? %>
      <br><em>*click order-id to view order details</em>
    <% else %>
      <br><em>you do not have any orders placed</em>
    <% end %>
  </div>
</div>